{% extends "base.html.twig" %}

{% block title %} Download {% endblock %}

{% block body %}

<div class="mt-5">
        
 {% for file in files %}
        <div class="mb-3">

          <h2 class="mb-3">{{ file.fileName}} <small>({{ file.fileSize|format_file_size }})</small></h2>
          <a class="btn btn-success btn-lg " download href="{{ vich_uploader_asset (file) }}">Download</a>
        </div>
        {% endfor %}
</div>
{% endblock %}