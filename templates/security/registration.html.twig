{% extends "base.html.twig" %}

{% block title  %}
	{{ "Sign in up" | trans([], 'messages') }}
{% endblock %}

{% block body %}
	<div class="row align-items-center mt-4">
		<div class="col-6 mx-auto ">
         <h1 class="h3 mb-3 font-weight-normal">{{ "Sign in up" | trans([], 'messages') }}</h1>

    <form action={{ path('route_registration') }} method="POST" name="registration" >
        
        <div class="mb-3">
             {{ form_label(form.email, 'Email :')}}

            {{ form_widget(form.email, {
                'attr': {
                    'class': 'form-control' ~ (form.email.vars.valid ? ' ' : ' is-invalid'),
                    'placeholder': 'email@exemple.com'
                    }}) 
                }}
                <div class="invalid-feedback  mb-3">
                    {{ form_errors(form.email) }}
                </div>
        </div>
       
        <div calss="mb-3">
             {{ form_label(form.password, "Password" | trans([], 'messages')   )}}

                {{ form_widget(form.password, {
                'attr': {
                    'class': 'form-control' ~ (form.password.vars.valid ? ' ' : ' is-invalid'),
                    'placeholder': "Your password" | trans([], 'messages')
                    }}) 
            }}
                <div class="invalid-feedback  mb-3">
                    {{ form_errors(form.password) }}
                </div>
        </div>
           
        <div class="mt-3">
            {{ form_label(form.confirmPassword, "Confirm password" | trans([], 'messages') ) }}

            {{ form_widget(form.confirmPassword, {
                'attr': {
                    'class': 'form-control' ~ (form.confirmPassword.vars.valid ? ' ' : ' is-invalid'),    
                    'placeholder': "Confirm your password" | trans([], 'messages')
                    }}) 
            }}
                <div class="invalid-feedback  mb-3">
                    {{ form_errors(form.confirmPassword) }}
                </div>
        </div>

        <input type="hidden" id="register_token" name="token" value="{{ csrf_token ('register-user') }}"/>
        
        <button type="submit" class="btn btn-primary mt-3" >Sign in up</button>
    </form>
        </div>
	</div>

{% endblock %}
