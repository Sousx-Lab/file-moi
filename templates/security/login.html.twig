{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="row align-items-center mt-4">
  <div class="col-6 mx-auto ">
    <form action={{ path ('route_login') }} method="post" name="login">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
		<h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
		    <label for="inputEmail">Email</label>
		        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
		    <label class="mt-3" for="inputPassword">Password</label>
		        <input type="password" name="password" id="inputPassword" class="form-control" required>

		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
		    <div class="checkbox">
		            <label>
		                <input class="mt-2" type="checkbox" name="_remember_me"> Remember me
		            </label>
			</div>
	
		<div class="mt-3">
			<button class="btn btn-primary" type="submit">Sign in</button>

			<a class="h5 ml-3" href={{ path ('route_password_reset') }}>Forgot password ?</a>
		</div>
	</form>
 </div>
</div>
	
{% endblock %}
