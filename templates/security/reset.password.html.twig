{% extends "base.html.twig" %}

{% block title %} Reset password{% endblock %}

{% block body %}
   <div class="row mt-4 align-items-center ">
		<div class="col-6 mx-auto ">
            
         <h1 class="h3 mb-3 font-weight-normal text-center">{{ "Reset password" | trans([], 'messages') }}</h1>

         {% if error %}
            <div class="alert alert-danger">{{ error.messageKey | trans(error.messageData, 'security') }}</div>
            {% endif %}

         <form method="POST" name="password_reset_form" >
            <div class="mb-3">
             {{ form_label(form.email, 'Email :')}}

             {{ form_widget(form.email, {
                'attr': {
                    'class': 'form-control' ~ (form.email.vars.valid ? ' ' : ' is-invalid'),
                    'placeholder': 'email@exemple.com'
                    }}) 
                }}
                <div class="invalid-feedback  mb-3">

                    {{ form_errors(form.email) }}
                    
                </div>
            </div> 
            
            <button type="submit" class="btn btn-primary mt-3" >Recovery</button>

            {{ form_widget(form._token)}}
         </form>
        </div>
    </div>
{% endblock %}