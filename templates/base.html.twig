<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css" crossorigin="anonymous">
		{# {{ encore_entry_link_tags('app') }} #}
		{% block stylesheets %}{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-md navbar-dark bg-primary">
			<div class="collapse navbar-collapse" id="navbarColor01">
				<ul class="navbar-nav mx-auto">
					<li class="nav-item active">
						<a class="nav-link" href={{path ('route_homepage')}}>Home
							<span class="sr-only">(current)</span>
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#">About</a>
					</li>
					</ul>
				</div>
					{% if app.user %}
					<div class="float-right" > 
						<li class="">
							<span class="text-light">{{app.user.firstname ? app.user.firstname : app.user.email}} </span>
						</li>
						<li class="">
							<a class="" href={{ path ('route_logout') }}>Logout</a>
						</li>
					{% else %}
						<li class="">
							<a href={{ path ('route_login') }} class="">Login</a>
							<span class="text-light ml-2 mr-2"> | </span>
							<a class="" href={{ path ('route_registration') }}>Sign Up</a>
						</li>
					{% endif %}
					</div>
				</nav>
		<div class="container h-100">
			{% for label, messages in app.flashes %}
    			{% for message in messages %}
       			 <div class="alert alert-{{ label }}">{{ message }} </div>
            	{% endfor %}	
       		{% endfor %}
		 {% block body %}{% endblock %}
			</div>
			{# {{ encore_entry_script_tags('app') }} #}
			{% block javascripts %}{% endblock %}
		</body>
	</html>
